                        <Textarea
                          value={fieldValue}
                          placeholder={`Enter ${fieldDef.name.toLowerCase()}`}
                          onChange={(e) => {
                            const newFields = { ...config.fields, [fieldDef.name]: e.target.value }
                            setConfig(prev => ({ ...prev, fields: newFields }))
