                      </div>
                      
                      {fieldDef.type === "singleLineText" || fieldDef.type === "multilineText" || fieldDef.type === "email" || fieldDef.type === "url" || fieldDef.type === "phoneNumber" ? (
                        <Input
                          type={fieldDef.type === "email" ? "email" : "text"}
                          value={fieldValue}
                          placeholder={`Enter ${fieldDef.name.toLowerCase()}`}
